<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<GridPane fx:controller="controller.ControllerAccueil" xmlns:fx="http://javafx.com/fxml"
          prefHeight="300.0" prefWidth="400.0"
          fx:id="gpAccueil">

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <ImageView fitWidth="150" preserveRatio="true"
               GridPane.hgrow="ALWAYS"   GridPane.vgrow="ALWAYS"
               GridPane.valignment="TOP" GridPane.halignment="CENTER">
        <image>
            <Image url="/img/chicken.jpeg"/>
        </image>
    </ImageView>

    <Label fx:id="lbText" />

    <Button text="Jouer"   onAction="#Jouer"   GridPane.valignment="CENTER" GridPane.halignment="CENTER"/>
    <Button text="Quitter" onAction="#quitter" GridPane.valignment="BOTTOM" GridPane.halignment="RIGHT" />
</GridPane>
